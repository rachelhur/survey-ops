{
    "config": "config.json",
    "fits_path": "../data/fits/decam-exposures-20251211.fits",
    "json_path": "../data/fits/decam-exposures-20251211.json",
    "metadata": {
        "parent_results_dir": "experiment_results",
        "exp_name": "bc-radec-with-nightly-per-bin-completion-hist",
        "seed": 10
    },
    "model": {
        "algorithm": "BC",
        "loss_function": "cross_entropy",
        "tau": 0.005,
        "gamma": 0.99,
        "activation": "relu"
    },
    "data": {
        "bin_method": "healpix",
        "nside": 32,
        "num_bins_1d": null,
        "bin_space": "radec",
        "specific_years": [
            2018
        ],
        "specific_months": null,
        "specific_days": null,
        "specific_filters": null,
        "include_bin_features": true,
        "do_cyclical_norm": true,
        "do_max_norm": true,
        "do_inverse_norm": true,
        "remove_large_time_diffs": true,
        "additional_bin_features": [
        	"night_num_visits",
			"night_num_unvisited_fields",
			"night_num_incomplete_fields"
	],
        "additional_pointing_features": []
    },
    "train": {
        "max_epochs": 800.0,
        "batch_size": 1024,
        "num_workers": 8,
        "use_train_as_val": false,
        "lr": 0.001,
        "lr_scheduler": "cosine_annealing",
        "lr_scheduler_num_epochs": 200,
        "lr_scheduler_epoch_start": 5,
        "eta_min": 0.0001,
        "hidden_dim": 1024,
        "patience": 50,
        "lr_scheduler_kwargs": {
        }
    }
}
