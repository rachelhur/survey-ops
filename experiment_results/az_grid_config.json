{
    "config": "./config.json",
    "fits_path": "../data/decam-exposures-20251211.fits",
    "json_path": "../data/decam-exposures-20251211.json",
    "metadata": {
        "parent_results_dir": "experiment_results",
        "exp_name": "bc-azel-grid-best",
        "seed": 10
    },
    "model": {
        "algorithm": "BC",
        "loss_function": "cross_entropy",
        "tau": 0.005,
        "gamma": 0.99,
        "activation": "relu",
        "grid_network": "single_bin_scorer"
    },
    "data": {
        "bin_method": "healpix",
        "nside": 16,
        "num_bins_1d": 16,
        "bin_space": "azel",
        "specific_years": [
	2015, 2016, 2017, 2018
        ],
        "specific_months": null,
        "specific_days": null,
        "specific_filters": null,
        "include_bin_features": true,
        "do_cyclical_norm": true,
        "do_max_norm": true,
        "do_inverse_norm": true,
	"do_ang_distance_norm": true,
        "remove_large_time_diffs": true,
        "additional_bin_features": [
			"ha",
			"airmass",
			"moon_distance",
			"angular_distance_to_pointing"
        ],
        "additional_global_features": [],
	"reward_choice": "expert_actions"
    },
    "train": {
        "max_epochs": 500,
        "batch_size": 512,
        "num_workers": 8,
        "use_train_as_val": false,
        "lr": 0.008,
        "lr_scheduler": "cosine_annealing",
        "lr_scheduler_num_epochs": 100,
        "lr_scheduler_epoch_start": 10,
        "eta_min": 0.001,
        "hidden_dim": 64,
        "patience": 40,
        "lr_scheduler_kwargs": {
        }
    }
}
